<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc"
  xmlns:xi="http://www.w3.org/2001/XInclude">
<resistance>
  <strength>10</strength>
  <screen_edge_strength>20</screen_edge_strength>
</resistance>

<focus>
  <focusNew>yes</focusNew>
  <followMouse>no</followMouse>
  <focusLast>yes</focusLast>
  <underMouse>no</underMouse>
  <focusDelay>200</focusDelay>
  <raiseOnFocus>no</raiseOnFocus>
</focus>

<placement>
  <policy>UnderMouse</policy>
  <center>yes</center>
  <monitor>Active</monitor>
  <primaryMonitor>Active</primaryMonitor>
</placement>

<theme>
  <name>Syscrash</name>
  <titleLayout>NLIMC</titleLayout>
  <keepBorder>yes</keepBorder>
  <animateIconify>yes</animateIconify>
  <font place="ActiveWindow">
    <name>sans</name>
    <size>8</size>
    <weight>bold</weight>
    <slant>normal</slant>
  </font>
  <font place="InactiveWindow">
    <name>sans</name>
    <size>8</size>
    <weight>bold</weight>
    <slant>normal</slant>
  </font>
  <font place="MenuHeader">
    <name>sans</name>
    <size>9</size>
    <weight>normal</weight>
    <slant>normal</slant>
  </font>
  <font place="MenuItem">
    <name>sans</name>
    <size>9</size>
    <weight>normal</weight>
    <slant>normal</slant>
  </font>
  <font place="ActiveOnScreenDisplay">
    <name>sans</name>
    <size>9</size>
    <weight>bold</weight>
    <slant>normal</slant>
  </font>
  <font place="InactiveOnScreenDisplay">
    <name>sans</name>
    <size>9</size>
    <weight>bold</weight>
    <slant>normal</slant>
  </font>
</theme>

<desktops>
  <number>9</number>
  <firstdesk>1</firstdesk>
  <names>
    <name>⚀</name> <!-- "General-purpose #1" -->
    <name>⚁</name> <!-- "General-purpose #2" -->
    <name>⚂</name> <!-- "General-purpose #3" -->
    <name>ⅅ</name> <!-- "Documentation" -->
    <name>☕</name> <!-- "Programming" -->
    <name>R</name> <!-- "Resources" -->
    <name>♫</name> <!-- "Music" -->
    <name>☿</name> <!-- "Git or Mercurial" -->
    <name>♔</name> <!-- "Fun or games" -->
  </names>

  <!-- Popup time is set to 0 in order to disable the pop-up window. -->
  <popupTime>0</popupTime>
</desktops>

<resize>
  <drawContents>yes</drawContents>
  <popupShow>Nonpixel</popupShow>
  <popupPosition>Center</popupPosition>
  <popupFixedPosition>
    <x>10</x>
    <y>10</y>
  </popupFixedPosition>
</resize>

<margins>
  <top>0</top>
  <bottom>0</bottom>
  <left>32</left>
  <right>0</right>
</margins>

<dock>
  <position>TopLeft</position>
  <floatingX>50</floatingX>
  <floatingY>0</floatingY>
  <noStrut>no</noStrut>
  <stacking>Above</stacking>
  <direction>Vertical</direction>
  <autoHide>yes</autoHide>
  <hideDelay>300</hideDelay>
  <showDelay>300</showDelay>
  <moveButton>Right</moveButton>
</dock>

<keyboard>
  <chainQuitKey>Esc</chainQuitKey>

  <!-- Keybindings for switching between the virtual desktops: -->
  <keybind key="C-W-1">
    <action name="GoToDesktop">
      <to>1</to>
    </action>
  </keybind>
  <keybind key="C-W-2">
    <action name="GoToDesktop">
      <to>2</to>
    </action>
  </keybind>
  <keybind key="C-W-3">
    <action name="GoToDesktop">
      <to>3</to>
    </action>
  </keybind>
  <keybind key="C-W-4">
    <action name="GoToDesktop">
      <to>4</to>
    </action>
  </keybind>
  <keybind key="C-W-5">
    <action name="GoToDesktop">
      <to>5</to>
    </action>
  </keybind>
  <keybind key="C-W-6">
    <action name="GoToDesktop">
      <to>6</to>
    </action>
  </keybind>
  <keybind key="C-W-7">
    <action name="GoToDesktop">
      <to>7</to>
    </action>
  </keybind>
  <keybind key="C-W-8">
    <action name="GoToDesktop">
      <to>8</to>
    </action>
  </keybind>
  <keybind key="C-W-9">
    <action name="GoToDesktop">
      <to>9</to>
    </action>
  </keybind>
  <keybind key="C-W-Left">
    <action name="GoToDesktop">
      <to>left</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-h">
    <action name="GoToDesktop">
      <to>left</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-Right">
    <action name="GoToDesktop">
      <to>right</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-l">
    <action name="GoToDesktop">
      <to>right</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-Up">
    <action name="GoToDesktop">
      <to>up</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-k">
    <action name="GoToDesktop">
      <to>up</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-Down">
    <action name="GoToDesktop">
      <to>down</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <keybind key="C-W-j">
    <action name="GoToDesktop">
      <to>down</to>
      <wrap>no</wrap>
    </action>
  </keybind>
  <!-- End of keybindings for switching between the virtual desktops. -->

  <!-- Keybindings for sending windows to other virtual desktops: -->
  <keybind key="C-W-F1">
    <action name="SendToDesktop">
      <desktop>1</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F2">
    <action name="SendToDesktop">
      <desktop>2</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F3">
    <action name="SendToDesktop">
      <desktop>3</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F4">
    <action name="SendToDesktop">
      <desktop>4</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F5">
    <action name="SendToDesktop">
      <desktop>5</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F6">
    <action name="SendToDesktop">
      <desktop>6</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F7">
    <action name="SendToDesktop">
      <desktop>7</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F8">
    <action name="SendToDesktop">
      <desktop>8</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <keybind key="C-W-F9">
    <action name="SendToDesktop">
      <desktop>9</desktop>
      <follow>no</follow>
    </action>
  </keybind>
  <!-- End of keybindings for sending windows to other virtual desktops -->


  <!-- Keybindings for handling the multimedia keys: -->
  <keybind key="XF86AudioLowerVolume">
    <action name="Execute">
      <command>pactl set-sink-volume 0 -1%</command>
    </action>
  </keybind>
  <keybind key="XF86AudioRaiseVolume">
    <action name="Execute">
      <command>pactl set-sink-volume 0 +1%</command>
    </action>
  </keybind>
  <keybind key="XF86AudioMute">
    <action name="Execute">
      <command>pactl set-sink-mute 0 toggle</command>
    </action>
  </keybind>

  <keybind key="W-XF86AudioLowerVolume">
    <action name="Execute">
      <command>amixer -q set Headphone playback 1- unmute</command>
      <command>amixer -q set Speaker playback 1- unmute</command>
    </action>
  </keybind>
  <keybind key="W-XF86AudioRaiseVolume">
    <action name="Execute">
      <command>amixer -q set Headphone playback 1+ unmute</command>
      <command>amixer -q set Speaker playback 1+ unmute</command>
    </action>
  </keybind>
  <keybind key="W-XF86AudioMute">
    <action name="Execute">
      <!-- Due to some bug this won't work (mutes multiple channels):
      <command>amixer -q set Master toggle</command>
      Workaround: hitting Mute button sets Master to 0. -->
      <command>amixer -q set Headphone playback 0 unmute</command>
      <command>amixer -q set Speaker playback 0 unmute</command>
    </action>
  </keybind>

  <keybind key="XF86AudioPrev">
    <action name="Execute">
      <command>mpc prev</command>
    </action>
  </keybind>
  <keybind key="XF86AudioPlay">
    <action name="Execute">
      <command>mpc toggle</command>
    </action>
  </keybind>
  <keybind key="XF86AudioNext">
    <action name="Execute">
      <command>mpc next</command>
    </action>
  </keybind>

  <keybind key="XF86MonBrightnessUp">
    <action name="Execute">
      <command>/home/simba/Source/Scripts/Brightness -i 200</command>
    </action>
  </keybind>
  <keybind key="XF86MonBrightnessDown">
    <action name="Execute">
      <command>/home/simba/Source/Scripts/Brightness -d 200</command>
    </action>
  </keybind>
  <keybind key="XF86TouchpadToggle">
    <action name="Execute">
      <command>bash /home/simba/.local/bin/MachineSpecific/DellToggleTouchpad.sh</command>
    </action>
    <action name="Execute">
      <command>
        notify-send -t 2000 "Touchpad toggled" "Hardware state modification"
      </command>
    </action>
  </keybind>
  <!-- End of keybindings for handling the multimedia keys. -->

  <!-- Keybindings for windows management: -->
  <keybind key="W-d">
    <action name="ToggleShowDesktop"/>
  </keybind>
  <keybind key="A-F4">
    <action name="Close"/>
  </keybind>
  <keybind key="A-Escape">
    <action name="Lower"/>
    <action name="FocusToBottom"/>
    <action name="Unfocus"/>
  </keybind>
  <keybind key="A-space">
    <action name="ShowMenu"><menu>client-menu</menu></action>
  </keybind>
  <!-- End of keybindings for windows management. -->

  <!-- Keybindings for window switching -->
  <keybind key="A-Tab">
    <action name="NextWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="A-S-Tab">
    <action name="PreviousWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <!-- End of keybindings for window switching -->

  <!-- Key-chains for configuring openbox: -->
  <keybind key="W-o">
    <keybind key="a">
      <action name="Execute">
        <command>gvim ~/.config/openbox/autostart</command>
      </action>
    </keybind>
    <keybind key="c">
      <action name="Execute">
        <command>gvim ~/.config/openbox/rc.xml</command>
      </action>
    </keybind>
    <keybind key="e">
      <action name="Execute">
        <command>thunar ~/.config/openbox</command>
      </action>
    </keybind>
    <keybind key="r">
      <action name="Reconfigure" />
      <action name="Execute">
        <command>notify-send -t 500 "Reconfigured" "Openbox control"</command>
      </action>
    </keybind>
    <keybind key="t">
      <action name="Execute">
        <command>urxvt -cd "/home/simba/.config/openbox"</command>
      </action>
      <action name="Execute">
        <command>
          notify-send -t 1000 "Terminal launched" "Openbox control"
        </command>
      </action>
    </keybind>
  </keybind>
  <!-- End of key-chains for configuring openbox. -->

  <!-- Key-chains for invoking the applications: -->
  <keybind key="W-a">

      </action>
    </keybind>
    <keybind key="r">
      <action name="Execute">
        <command>thunar "Repos"</command>
      </action>
    </keybind>
    <keybind key="S-s">
      <action name="Execute">
        <command>thunar "SelfMade"</command>
      </action>
    </keybind>
    <keybind key="s">
      <action name="Execute">
        <command>thunar "Source"</command>
      </action>
    </keybind>
    <keybind key="t">
      <action name="Execute">
        <command>thunar "Tools"</command>
      </action>
    </keybind>
    <keybind key="u">
      <action name="Execute">
        <command>thunar ".vim/UltiSnips/"</command>
      </action>
    </keybind>
    <keybind key="v">
      <action name="Execute">
        <command>thunar "VMs/Shared"</command>
      </action>
    </keybind>
  </keybind>
  <!-- End of the keychains invoking a file explorer. -->

  <!-- Key-chains modifying the machine/hardware state: -->
  <keybind key="W-h">
    <!-- Inverts the colors on the hardware monitor: -->
    <keybind key="i">
      <action name="Execute">
        <command>xcalib -invert -alter</command>
      </action>
      <action name="Execute">
        <command>
          notify-send -t 1500 "Colors invert" "Hardware state modification"
        </command>
      </action>
    </keybind>

    <!-- Locks out the current user -->
    <keybind key="l">
      <action name="Execute">
        <command>notify-send -t 1500 "Lock user" "System lock"</command>
      </action>
      <action name="Execute">
        <command>XLock</command>
      </action>
    </keybind>

    <!-- Enables/Disables the touchpad: -->
    <keybind key="t">
      <action name="Execute">
        <command>bash /home/simba/.local/bin/MachineSpecific/DellToggleTouchpad.sh</command>
      </action>
      <action name="Execute">
        <command>
          notify-send -t 2000 "Touchpad toggled" "Hardware state modification"
          </command>
      </action>
    </keybind>

    <!-- Keychains for modifying the number of connected screens: -->
    <keybind key="W-s">
      <keybind key="1">
        <action name="Execute">
          <command>bash /home/simba/Source/Scripts/Monitors.sh 1</command>
        </action>
        <action name="Execute">
          <command>
            notify-send -t 2000 "Single-monitor mode" "Hardware state modification"
          </command>
        </action>
      </keybind>
      <keybind key="2">
        <action name="Execute">
          <command>bash /home/simba/Source/Scripts/Monitors.sh 2</command>
        </action>
        <action name="Execute">
          <command>
            notify-send -t 2000 "Two-monitor mode" "Hardware state modification"
          </command>
        </action>
      </keybind>
    </keybind>
    <!-- End of the keychains for modifying the number of connected screens. -->

    <keybind key="F1">
      <action name="Execute">
        <command>xset dpms force off</command>
      </action>
    </keybind>

    <!-- Keybindings for selecting the keyboard layout: -->
    <keybind key="W-k">
      <!-- Sets the polish dvorak keyboard layout: -->
      <keybind key="d">
        <action name="Execute">
          <command>/home/simba/Source/Scripts/Setkeyboard d</command>
        </action>
        <action name="Execute">
          <command>notify-send -t 1000 "Dvorak keyboard set"
          "Hardware state modification"</command>
        </action>
      </keybind>

      <!-- Sets the polish qwerty keyboard layout: -->
      <keybind key="q">
        <action name="Execute">
          <command>/home/simba/Source/Scripts/Setkeyboard q</command>
        </action>
        <action name="Execute">
          <command>notify-send -t 1000 "Polish QWERTY keyboard set"
          "Hardware state modification"</command>
        </action>
      </keybind>
    </keybind>
    <!-- End of keybindings for selecting the keyboard layout. -->

  </keybind>
  <!-- End of the keychains for modifying the machine state. -->

  <!-- Key-chains for modifying the windows: -->
  <keybind key="W-w">
    <!-- Toggles the colors of all the instances of this window class. -->
    <keybind key="c">
      <action name="Execute">
        <command>
          /home/simba/Source/Scripts/MachineSpecific/InvertColors.sh
        </command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Inverting colors" "Window modification"</command>
      </action>
    </keybind>

    <keybind key="i">
      <action name="Iconify" />
    </keybind>

    <keybind key="t">
      <action name="ToggleAlwaysOnTop" />
      <action name="Execute">
        <command>notify-send -t 1000 "Always on top" "Window modification"</command>
      </action>
    </keybind>

    <keybind key="b">
      <action name="ToggleAlwaysOnBottom" />
    </keybind>

    <keybind key="f">
      <action name="ToggleFullscreen" />
    </keybind>
    <keybind key="m">
      <action name="ToggleMaximizeFull" />
    </keybind>
  </keybind>
  <!-- End of the keychains for modifying the windows. -->

  <!-- Key-chains for smart window positioning with W-m
       - - - FOR THE PRIMARY and the secondary MONITOR - - -          -->
  <keybind key="W-m">
    <keybind key="apostrophe">
      <!-- GOTO TOP LEFT -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>1</monitor>
        <x>0</x>
        <y>0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="S-apostrophe">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>
        <x>0</x>
        <y>0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>

    <keybind key="comma">
      <!-- GOTO TOP -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>1</monitor>
        <x>0</x>
        <y>0</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="S-comma">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>
        <x>0</x>
        <y>0</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>

    <keybind key="period">

    </keybind>
    <keybind key="S-a">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>
        <x>0</x>
        <y>0</y>
        <width>50%</width>
        <height>100%</height>
      </action>
    </keybind>

    <keybind key="o">
      <!-- GOTO CENTER (MAXIMIZE) -->
      <action name="MoveResizeTo">
        <monitor>1</monitor>
      </action>
      <action name="ToggleMaximizeFull"/>
    </keybind>
    <keybind key="S-o">
      <action name="MoveResizeTo">
        <monitor>2</monitor>
      </action>
      <action name="ToggleMaximizeFull"/>
    </keybind>

    <keybind key="e">
      <!-- GOTO RIGHT -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>1</monitor>
        <x>50%</x>
        <y>0</y>
        <width>50%</width>
        <height>100%</height>
      </action>
    </keybind>
    <keybind key="S-e">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>
        <x>50%</x>
        <y>0</y>
        <width>50%</width>
        <height>100%</height>
      </action>
    </keybind>

    <keybind key="semicolon">
      <!-- GOTO BOTTOM LEFT -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>1</monitor>
        <x>0</x>
        <y>50%</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="S-semicolon">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>
        <x>0</x>
        <y>50%</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>

    <keybind key="q">
      <!-- GOTO BOTTOM -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>1</monitor>
        <x>0</x>
        <y>50%</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="S-q">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>
        <x>0</x>
        <y>50%</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>

    <keybind key="j">
      <!-- GOTO BOTTOM RIGHT -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>1</monitor>
        <x>50%</x>
        <y>50%</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <keybind key="S-j">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <monitor>2</monitor>

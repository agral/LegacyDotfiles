    </keybind>

    <keybind key="b">
      <action name="Execute">
        <command>transmission-qt</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Transmission-Qt" "Launching"</command>
      </action>
    </keybind>

    <keybind key="c">
      <action name="Execute">
        <command>chromium</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Chromium" "Launching"</command>
      </action>
    </keybind>

    <keybind key="e">
      <action name="Execute">
        <command>thunar</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Thunar" "Launching"</command>
      </action>
    </keybind>

    <keybind key="f">
      <action name="Execute">
        <command>firefox</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Firefox" "Launching"</command>
      </action>
    </keybind>

    <keybind key="S-f">
      <action name="Execute">
        <command>firefox --private-window</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Private Firefox" "Launching"</command>
      </action>
    </keybind>

    <keybind key="S-g">
      <action name="Execute">
        <command>gimp</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "GIMP" "Launching"</command>

      </action>
    </keybind>

    <keybind key="v">
      <action name="Execute">
        <command>gvim</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "GVim" "Launching"</command>
      </action>
    </keybind>

    <keybind key="S-v">
      <action name="Execute">
        <command>urxvt -e vim</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "Vim in URxvt" "Launching"</command>
      </action>
    </keybind>

    <keybind key="w">
      <action name="Execute">
        <command>virtualbox</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "VirtualBox" "Launching"</command>
      </action>
    </keybind>

    <keybind key="S-z">
      <action name="Execute">
        <command>filezilla</command>
      </action>
      <action name="Execute">
        <command>notify-send -t 1000 "FileZilla" "Launching"</command>
      </action>
    </keybind>
  </keybind>
  <!-- End of the keychains for invoking the applications. -->

  <!-- Keychain invoking the file explorer (thunar): -->
  <keybind key="W-e">
    <keybind key="S-a">
      <action name="Execute">
        <command>thunar "Archived"</command>
      </action>
    </keybind>
    <keybind key="a">
      <action name="Execute">
        <command>thunar "Audio/Music/"</command>
      </action>
    </keybind>
    <keybind key="b">
      <action name="Execute">
        <command>thunar "Builds/"</command>
      </action>
    </keybind>
    <keybind key="d">
      <action name="Execute">
        <command>thunar "Documents/"</command>
      </action>
    </keybind>

    <!-- [W-e, e] launches Thunar in a home directory. -->
    <keybind key="e">
      <action name="Execute">
        <command>thunar</command>
      </action>
    </keybind>

    <keybind key="i">
      <action name="Execute">
        <command>thunar "IN"</command>
